extends ../frame

block content
    div.html.ui.top.aligned.segment
        div.ui.breadcrumb
            a.section 字典管理
            i.right.chevron.icon.divider
            div.active.section 乙方管理
    div.ui.segment.grid.aligned.small.form
        div.ten.wide.column.centered
            div.ui.fluid.action.input
                input(type="text", id="secondPartyName", placeholder="乙方名称")
                button.ui.primary.button#queryBtn 查询
    div.ui.grid.aligned.segment
        div.ten.wide.column.centered
            table.ui.grey.compact.selectable.celled.striped.table.sortable
                thead
                    tr.center.aligned
                        th.sorted.ascending 乙方名称
                tbody#secondPartyList
                    each list, i in secondPartyList
                        tr.center.aligned
                            td #{list.second_party_name}
                tfoot
                    tr
                        th(colspan="6")
                            div#addSecondPartyBtn.ui.right.floated.small.primary.labeled.icon.button 添加乙方
                                i.user.icon
                div#secondPartyModal.ui.modal
                    div.header 添加乙方
                    i.close.icon
                    div.content
                        div.ui.segment.small.form
                            div.field
                                label 乙方名称
                                div.ui.fluid.action.input
                                    input(type="text", id="secondPartyFullName", placeholder="乙方名称")
                                    button.ui.primary.button#confirmSecondPartyBtn 确定
                                div.ui.floating.hidden.segment.center.aligned.message#modalMsg
                                    p
    script.
        require(["/app/config.js"], function() {
            require(["/app/dictionary/secondPartyList.js"]);
        });