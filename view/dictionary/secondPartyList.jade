extends ../frame

block content
    div.html.ui.top.aligned.segment
        div.ui.breadcrumb
            a.section 字典管理
            i.right.chevron.icon.divider
            div.active.section 乙方管理
    div.ui.grid.aligned.segment
        div.ten.wide.column.centered
            table.ui.grey.compact.selectable.celled.striped.table
                thead
                    tr.center.aligned
                        th 乙方名称
                tbody
                    each list, i in secondPartyList
                        tr.center.aligned
                            td #{list.second_party_name}
                tfoot
                    tr
                        th(colspan="6")
                            div#addUserBtn.ui.right.floated.small.primary.labeled.icon.button 添加乙方
                                i.user.icon
                div#firstPartyModal.ui.modal
                    div.header 添加乙方
                    i.close.icon
                    div.content
                        div.ui.segment.small.form
                            div.field
                                label 乙方名称
                                input(type="text", placeholder="乙方名称")
                            div.field
                                button.ui.primary.button 确定
    script.
        require(["/app/config.js"], function() {
            require(["/app/user/userList.js"]);
        });