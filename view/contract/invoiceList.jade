					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
					td Cell
			tfoot
				tr
					th(colspan="18")
						div.ui.right.floated.pagination.menu
							a.icon.item
								i.left.chevron.icon
							a.item.active 1
							a.item 2
							a.item 3
							a.item 4
							a.icon.item
								i.right.chevron.icon
